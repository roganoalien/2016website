//global objects
* 
	box-sizing border-box
//body
body
	background white
	color $gris
	font-family $fuente
	font-size 16px
	font-weight 400
	height 100vh
	overflow-x hidden
	position relative
	width 100%
	&.no-scroll{
		overflow hidden
	}
	.content-container{
		background $blanco
		box-shadow 0 -5px 60px 10px rgba(black, .05)
		transition padding-top .5s
		h2{
			color $gris
			font-size 26px
			font-weight $negrita
			text-align center
		}
		&.small{
			padding-top 60px
		}
		&.footer{
			align-items center
			background $gris-claro
			box-shadow 0 0 0 0 transparent
			color $gris
			display flex
			flex-direction column
			font-style italic
			font-weight 200
			justify-content center
			padding 2em 0
		}
	}
	.container{
		max-width 680px
	}
	.rogano-alert{
		height 100%
		left 0
		opacity 1
		overflow hidden
		position fixed
		top 0
		transition opacity 1s
		width 100%
		z-index 999
		&.faded{
			opacity 0
		}
		.alert-bg{
			background rgba($gris-claro, .75)
			height 100%
			left 0
			position absolute
			top 0
			width 100%
			z-index 1
		}
		.alert-content{
			align-content center
			background $blanco
			border 2px solid rgba($negro, .4)
			display flex
			flex-direction column
			height 200px
			justify-content center
			left 50%
			padding 2em
			position absolute
			top 50%
			transform translate(-50%,-50%)
			width 400px
			z-index 2
			@media $celular{
				width 300px
			}
			.content-title{
				color rgba($negro, .85)
				font-size 25px
				font-weight 700
				margin-bottom 16px
				text-align center
				text-transform uppercase
				&.error{
					color rgba($error, .85)
				}
				&.success{
					color rgba($azul, .85)
				}
			}
			.content-msg{
				color rgba($negro, .4)
				font-weight 400
				line-height 1.3
				margin-bottom 16px
				text-align center
			}
			.close-btn{
				align-items center
				background $azul
				color $blanco
				cursor pointer
				display flex
				height 50px
				justify-content center
				margin 0 auto
				text-transform uppercase
				width 100px
				&.error{
					background $error
				}
			}
		}
	}
	.rogano-project{
		background rgba($gris-claro, 1)
		height 100%
		left 0
		opacity 0
		overflow hidden
		pointer-events none
		position fixed
		top 0
		transition all 1s linear
		width 100%
		z-index -100
		.close-icon{
			cursor pointer
			height auto
			position absolute
			right 50px
			top 50px
			width 30px
			z-index 99999
			@media $laptop{
				right 30px
			}
			@media $tablet{
				right 20px
			}
			@media $celular{
				top 20px
				right 10px
			}
		}
		.project-content{
			height 100%
			left 50%
			opacity 1
			position absolute
			top 0
			transition opacity .5s
			transform translate(-50%, 0)
			width 100%
			.ajax-get{
				height 100%
				left 0
				overflow-x hidden
				overflow-y auto
				position absolute
				top 0
				width 100%
				.ajax-container{
					left 50%
					padding 4em 2em
					position absolute
					top 0
					transform translateX(-50%)
					width 60%
					@media $laptop{
						width 80%
					}
					@media $tablet{
						width 90%
					}
					@media $celular{
						width 95%
					}
				}
				hgroup{
					margin-bottom 3em
					text-align center
					width 100%
					h3{
						color rgba($negro, .8)
						font-size 24px
					}
					h4{
						color rgba($negro, .4)
						font-size 16px
						margin-top .25em
					}
					h5{
						font-size 14px
						margin-top .25em
						a{
							color $azul
							// text-decoratio
						}
					}
				}
				.content{
					color rgba($negro, .6)
					text-align justify
					@media $celular{
						text-align left
					}
					img{
						margin 1em 0
						width 100%
						&:last-child{
							margin 1em 0 0
						}
					}
					p{
						line-height 1.3
						margin 1em 0
					}
				}
			}
			&.faded{
				opacity 0
			}
		}
		&.showing{
			opacity 1
			pointer-events all
			z-index 999
		}
	}