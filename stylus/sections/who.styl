.who
	align-items center
	box-shadow 0 -5px 60px 10px rgba(black, .05)
	display flex
	flex-direction column
	overflow hidden
	width 100%
	article
		margin 0
		overflow hidden
		padding 0
		width 70%
	.about
		align-items center
		display flex
		justify-content center
		padding 6em 0
		.profile
			border 5px solid rgba($gris-claro, 1)
			border-radius 50%
			height 155px
			margin-right 5%
			max-width 155px
			min-width 155px
			overflow hidden
			position relative
			img
				height auto
				left 0
				position absolute
				top 0
				width 320px
		.texts
			width 50%
			h1
				font-size 25px
				font-weight $negrita
				margin-bottom .5em
			p
				font-size 14px
				font-weight 400
				line-height 120%
				text-align justify
	.skills
		p
			color $gris
			margin 1em auto .5em
			padding-left .5em
			width 72%
		.m-holder
			background rgba($negro, .1)
			border 8px solid transparent
			font-weight $negrita
			margin 0 auto
			overflow hidden
			padding 1em
			position relative
			width 72%
			.level
				background $azul
				height 100%
				left 0
				top 0
				position absolute
				z-index 1
				&.noventa
					width 90%
				&.setenta
					width 70%
				&.sesenta
					width 60%